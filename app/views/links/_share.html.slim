.btn-group.share-options
  = link_to 'Share', '#', class: 'dropdown-toggle', data: { toggle: 'dropdown' }
  ul.dropdown-menu
    - ['Facebook', 'Twitter', 'Google+', 'Reddit', 'Tumblr', 'Pinterest',
       'LinkedIn', 'Buffer', 'Digg', 'StumbleUpon',
       'Delicious'].each do |network|
      li = link_to network,
                   link_share_path(link, network.parameterize),
                   rel: 'nofollow noopener',
                   target: '_blank'
