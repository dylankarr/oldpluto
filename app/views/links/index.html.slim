- content_for :title, 'Rising News'   if params[:sort].nil?
- content_for :title, 'Popular News'  if params[:sort] == 'popular'
- content_for :title, 'Trending News' if params[:sort] == 'trending'
- content_for :title, 'Latest News'   if params[:sort] == 'newest'

.options.btn-toolbar
  = render 'hours_ago'
  = render 'sort'

  - if @sources.any?
    .btn-group
      - @sources.each do |source|
        = link_to params.merge(sources: (@source_ids - [source.slug])).permit!,
                  class: 'btn btn-default' do
          = "#{source.title} ×"

  - if @authors.any?
    .btn-group
      - @authors.each do |author|
        = link_to params.merge(authors: (@author_ids - [author.name])).permit!,
                  class: 'btn btn-default' do
          = "#{author.name} ×"

  - if @tags.any?
    .btn-group
      - @tags.each do |tag|
        = link_to params.merge(tags: (@tags - [tag])).permit!,
                  class: 'btn btn-default' do
          = "##{tag.titleize} ×"

- if @links.any?
  ol.links start=((params[:page] || '1').to_i * 25 - 24)
    = render partial: 'link', collection: @links
- else
  .no-results No Results.

.text-center
  = paginate @links
